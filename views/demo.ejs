<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>OpenID Connect Demo</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css" media="screen">
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css" media="screen">
  </head>

  <body>

    <div class="container">

      <div class="demo">

        <h1>OpenID Connect Demo</h1>

        <button type="button" class="btn btn-lg btn-secondary btn-block" id="signin">Login with Coral</button>

        <div class="card card-block" style="display:none;margin-top:15px;" id="logged-in">
          <p id="details"></p>
          <pre class="code" id="token"></pre>
          <a target="_blank" rel="nofollow" id="debugger" class="btn btn-secondary btn-xs btn-block">Open in JWT Debugger</a>
          <a id="clear" class="btn btn-danger btn-block" href="/demo">Logout</a>
        </div>
      </div>

    </div>

    <script src="/javascripts/oidc-client.min.js" charset="utf-8"></script>
    <script src="/javascripts/jwt-decode.min.js" charset="utf-8"></script>
    <script type="text/javascript">
      document.addEventListener("DOMContentLoaded", function(event) {
        // Copyright (c) Brock Allen & Dominick Baier. All rights reserved.
        // Licensed under the Apache License, Version 2.0. See LICENSE in the project root for license information.

        function getParameterByName(name, url) {
          if (!url) url = window.location.href;
          name = name.replace(/[\[\]]/g, "\\$&");
          var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
              results = regex.exec(url);
          if (!results) return null;
          if (!results[2]) return '';
          return decodeURIComponent(results[2].replace(/\+/g, " "));
        }

        ///////////////////////////////
        // UI event handlers
        ///////////////////////////////
        var loggedInDOM = document.getElementById('logged-in');
        var signInDOM = document.getElementById('signin');
        var tokenDOM = document.getElementById('token');
        var clearDOM = document.getElementById('clear');
        var debuggerDOM = document.getElementById('debugger');
        var detailsDOM = document.getElementById('details');

        var id_token = getParameterByName('id_token');

        if (id_token && id_token !== '') {
          var decodedToken = jwt_decode(id_token);

          signInDOM.innerText = 'Logged In';
          signInDOM.disabled = true;
          tokenDOM.innerText = id_token;
          debuggerDOM.href = 'https://jwt.io/#debugger?&id_token=' + id_token;
          detailsDOM.innerHTML = 'Hello <b>' + decodedToken.sub + '</b>!';

          loggedInDOM.style.display = 'block';
        } else {
          ///////////////////////////////
          // OidcClient config
          ///////////////////////////////
          Oidc.Log.logger = console;
          Oidc.Log.level = Oidc.Log.INFO;

          var settings = {
            authority: '<%= root_url %>/connect',
            client_id: 'js.tokenmanager',
            redirect_uri: '<%= root_url %>/demo',
            response_type: 'id_token',
            scope: 'openid'
          };
          var client = new Oidc.OidcClient(settings);

          function signin() {
            client.createSigninRequest({ data: { bar: 15 } }).then(function(req) {
              window.location = req.url;
            }).catch(function(err) {
              console.error(err);
            });
          }

          signInDOM.addEventListener("click", signin, false);
        }
      });
    </script>
  </body>
</html>
